/* pages/webmenumanage/index.wxss */
.line{
  border-bottom: 0.5px solid #e5e5e5;
}
.section-warn{
  height: 44px;
  /* background: #888888;  */
  position: relative;
  border-bottom: 0.5px solid #e5e5e5;
}
.section-warn text{
  font-size: 14px;
  color: #888888;
  position:absolute;  
  bottom:12px;
  left:15px;
}
.section-btn{
  height: 44px;
  position: relative;
  border-bottom: 0.5px solid #e5e5e5;
  background:#ffffff;  
}
.section-btn .btn-icon{
  height: 16px;
  width: 16px;
  margin:14px 10px 14px 15px;
}
.section-btn .btn-name{
  font-size: 18px;
  color: #00a8f1;
  position:absolute;
  bottom:12px;
}
.container .section_title{
  height: 44px;
  position: relative;
  /* background: gray; */
  border-bottom: 0.5px solid #e5e5e5;
  background:#ffffff; 
}
.container .section_title text{
  font-size: 17px;
  color: #353535;
  position:absolute;  
  bottom:12.5px;
  left:15px;
}
.btn{
  background:#00a8f1;
  height:44px;
  border-radius:4px;
  text-align:center;
  line-height:44px;
  color:#ffffff;
  font-size:18px;
  width: 345px;
  margin:30px auto;
}
input{
  display:block;
  height:72rpx;
  text-overflow:clip;
  overflow:hidden;
  white-space:nowrap;
  border-radius:8rpx;
  line-height:72rpx;
  margin:8px 0 8px 0;
  padding-left:15px;
  border:1px solid#e5e5e5;
  color:black;
}
.disable-btn{
  background: #0299db;
  opacity:0.6;
  filter: Alpha(opacity=60)
}
