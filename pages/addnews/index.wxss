/* pages/addnews/index.wxss */
.clear{
  height: 10px;
  background: #f8f8f8;  
}
.cover{
  height: 180px;
}
.cover image{
  margin-top: 16.5px;
  height: 147px;
  width: 100%;
}
.input{
  height: 44px;
  font-size:18px;
  color:#353535;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  display:block;
}
 
.section{
  background: #ffffff;
  padding-left:15px;
}
.desc{
  padding-top: 15px;
}
.desc textarea{
  color:red;
}
.selecttype{
  height: 44px;
}
.section text{
  font-size: 17px;
  color: #353535;
  float: left;
  line-height:44px;
}
.section .point{
  float: right;
  height:44px;
}
.section .point image{
  margin-top: 14px;
  height: 16px;
  width: 12px;
  margin-right: 15px;
  padding-right: 0;
}
.section-area{
  padding-left:15px;
}
.section textarea{
  font-size:18px;
  color:#353535;
  width:90%;
  z-index:10;
  padding-bottom:10px;
}
.section-area textarea{
  font-size:18px;
  color:#353535;
  height:118px;
  margin-top:15px;
  overflow:hidden;
  width:90%;
}
.disable-btn{
  background: lightblue;
}

action-sheet-item{
  font-size: 20px;
  z-index:1000;
  padding:5px 0;
}
textarea{
display: block;
width: 100%;
z-index: -1;
}
.btn{
  margin:30px auto;
  background: #00a8f1;
  height: 44px;
  width:90%;
  line-height: 44px;
  text-align:center;
  font-size: 18px;
  color: #ffffff; 
  background: #00a8f1;
  border-radius: 4px;
}
.disable-btn{
  background: #0299db;
  opacity:0.6;
  filter: Alpha(opacity=60)
}
